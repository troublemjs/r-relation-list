{
  "name": "r-relation-list",
  "version": "0.0.1",
  "homepage": "http://github.com/troublemjs/r-relation-list",
  "keywords": [
    "React",
    "Component",
    "RelationList",
    "Dumi",
    "Typescript",
    "Less"
  ],
  "author": "ray <guokangf@gmail.com>",
  "repository": "https://github.com/troublemjs/r-relation-list.git",
  "license": "MIT",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father-build && lessc assets/index.less assets/index.css",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "classnames": "^2.3.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.3.1",
    "@types/react": "^17.0.11",
    "@umijs/test": "^3.0.5",
    "dumi": "^1.0.14",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "yorkie": "^2.0.0"
  }
}
